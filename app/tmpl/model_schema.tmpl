type QueryTimeStartEnd string // time duration `min-value,max-value` example format: `1701234567,1701320967` OR `1701234567000,1701320967000` OR `2006-01-02,2006-01-03` OR `2006-01-02 15:04:05,2006-01-03 15:04:05`

// UseTimeStartEnd column BETWEEN `start` AND `end`
func (s QueryTimeStartEnd) UseTimeStartEnd(column string, filter hey.Filter) {
	if column == "" || filter == nil {
		return
	}
	if !regexpQueryTimeStartEnd.MatchString(string(s)) {
		return
	}
	splits := strings.Split(string(s), ",")
	if len(splits) != 2 {
		return
	}
	between := make([]interface{}, 0, 2)
	timestamp := 0
	date := 0
	datetime := 0
	for _, tmp := range splits {
		if i64, err := strconv.ParseInt(tmp, 10, 64); err == nil {
			if i64 <= 0 {
				return
			}
			length := len(tmp)
			if length != 10 && length != 13 && length != 16 && length != 19 {
				return
			}
			between = append(between, i64)
			timestamp++
			continue
		}
		if len(tmp) == 10 {
			timeDate, err := time.Parse(time.DateOnly, tmp)
			if err != nil {
				return
			}
			between = append(between, timeDate)
			date++
			continue
		}
		timeDatetime, err := time.Parse(time.DateTime, tmp)
		if err != nil {
			return
		}
		between = append(between, timeDatetime)
		datetime++
	}
	if timestamp == 2 {
		if between[0].(int64) > between[1].(int64) {
			return
		}
		filter.Between(column, between[0], between[1])
		return
	}
	if date == 2 {
		if between[0].(time.Time).Unix() > between[1].(time.Time).Unix() {
			return
		}
		filter.Between(column, splits[0], splits[1])
		return
	}
	if datetime == 2 {
		if between[0].(time.Time).Unix() > between[1].(time.Time).Unix() {
			return
		}
		filter.Between(column, splits[0], splits[1])
		return
	}
}

type QueryIn string // column IN ( ?, ?, ? ... )  example-integer: 1,2,3... example-string: a,2,c... OR hex("1"),hex("2"),hex("3")...

func (s QueryIn) UseInInt(column string, filter hey.Filter) {
	if column == "" || filter == nil {
		return
	}
	splits := strings.Split(strings.ReplaceAll(string(s), " ", ""), ",")
	length := len(splits)
	if length == 0 {
		return
	}
	lists := make([]interface{}, 0, length)
	for _, tmp := range splits {
		if i64, err := strconv.ParseInt(tmp, 10, 64); err != nil {
			return
		} else {
			lists = append(lists, i64)
		}
	}
	filter.In(column, lists...)
}

func (s QueryIn) UseInString(column string, filter hey.Filter, adjusts ...func(item string) (string, error)) {
	if column == "" || filter == nil {
		return
	}
	splits := strings.Split(strings.TrimSpace(string(s)), ",")
	length := len(splits)
	if length == 0 {
		return
	}
	var adjust func(item string) (string, error)
	for i := len(adjusts) - 1; i >= 0; i-- {
		if adjusts[i] != nil {
			adjust = adjusts[i]
			break
		}
	}
	lists := make([]interface{}, 0, length)
	for _, tmp := range splits {
		if adjust != nil {
			if item, err := adjust(tmp); err != nil {
				return
			} else {
				tmp = item
			}
		}
		lists = append(lists, tmp)
	}
	filter.In(column, lists...)
}

